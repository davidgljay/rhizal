{
  "name": "rhizal",
  "version": "0.8.0",
  "description": "A lightweight chatbot for the Signal platform.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev-start": "docker compose -f docker-compose-dev.yml up",
    "stop": "docker compose down",
    "docker-build": "yarn build",
    "build": "babel src --out-dir dist && cp -r src/initialization/*.json src/initialization/*.sql dist/initialization",
    "dev": "nodemon dist/app.js",
    "test": "jest --watch"
  },
  "author": "David Jay",
  "license": "ISC",
  "dependencies": {
    "@mapbox/node-pre-gyp": "^2.0.0",
    "better-sqlite3": "^11.9.1",
    "node-fetch": "2",
    "pg": "^8.16.3",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9"
  }
}
